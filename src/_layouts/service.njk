<!-- ============================================ -->
<!--                   Gallery                    -->
<!-- ============================================ -->
{% set images_per_row = 3 %}
<section id="gallery-48">
	<div class="cs-container">
		<div class="cs-content">
			<span class="cs-topper">{{ gallery.header.subtitle }}</span>
			<h2 class="cs-title">{{ gallery.header.title }}</h2>
		</div>
		<div class="cs-image-group">
			{% for image in gallery.images %} {% if loop.index0 % images_per_row == 0
			%}
			<div class="cs-row cs-row-{{ loop.index0 // images_per_row + 1}}">
				{% endif %}

				<picture
					class="cs-picture cs-picture-{{ (loop.index0 % images_per_row) + 1 }}"
				>
					<source media="(max-width: 600px)" srcset="{{ image.image }}" />
					<source media="(min-width: 601px)" srcset="{{ image.image }}" />
					<img
						loading="lazy"
						decoding="async"
						src="{{ image.image }}"
						alt="Gallery Image"
						width="420"
						height="567"
					/>
				</picture>

				{% if loop.index0 % images_per_row == images_per_row - 1 or loop.last %}
			</div>
			{% endif %} {% endfor %}
		</div>
		<a href="" class="cs-button-solid">View Full Gallery</a>
	</div>
</section>

{% endblock %}
